template(name="championship")
	h1 #{championshipName}
	if playerInChampionship
		+AddAGame
	else
		if currentUser
			button#integrateChampionship.btn.btn-success.btn-block(type="button") {{_ "integrateChampionship"}}
		else
			p
				mark {{_ "logInToIntegrateTheChampionship"}}
	+Ranking
	+LastGamesComponent(nbGames="20")