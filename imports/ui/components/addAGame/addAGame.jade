template(name="progressBar")
	.progress
		.progress-bar.progress-bar-warning-sign.progress-bar-striped.active(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
			p {{_ "saveInProgress"}}

template(name="validateButton")
	button#addAGame.btn-block.btn.btn-success(type='submit') {{_ "validate"}}

template(name="fieldOK")
	span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden="true")
