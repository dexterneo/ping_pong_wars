template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navigation" aria-expended="false")
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "applicationName"}}
			#navigation.collapse.navbar-collapse
				ul.nav.navbar-nav
					li
						a.route(href="{{pathFor 'listChampionships'}}" data-target='.navbar-collapse') {{_ "championships"}}
					if currentUser
						li
							a.route(href="{{pathFor 'account'}}" data-target='.navbar-collapse') {{_ "account"}}
				.nav.navbar-nav.navbar-right
					+loginButtons
