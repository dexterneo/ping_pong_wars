{
    "env": {
        "browser": true,
        "es6": true,
        "meteor": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "rules": {
        "eqeqeq": [
            "error",
            "allow-null"
        ],
        "no-undef": [
            "off"
        ],
        "no-unused-vars": [
            "off"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
